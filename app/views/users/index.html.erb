<h1>Ruby on Rails スケジュール管理アプリ</h1>

<h3>スケジュール一覧</h3>

<% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>


<table>
 <thead>
  <tr>
   <th>ID</th>
   <th>タイトル</th>
   <th>開始日</th>
   <th>終了日</th>
   <th>終日</th>
   <th>スケジュール更新日時</th>
   <th>確認</th>
   <th>編集</th>
   <th>削除</th>
  </tr> 
 </thead> 

 <tbody>
  <% @users.each do |user| %>
   <tr>
    <td><%=user.id%></td>
    <td><%=user.title%></td>
    <td><%=user.start_day%></td>
    <td><%=user.fin_day%></td>
    <td>
    <%if user.all_day == true%>
    <p>◯</p>
    <%else user.all_day == false%>
    <p></p>
    <%end%>
    </td>
    <td><%=user.updated_at .to_s(:datetime_jp)%></td>
    <td><%= link_to "確認", user %></td>
    <td><%= link_to "編集", [:edit, user] %></td>
    <td><%= link_to "削除", user, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
   </tr>
  <% end %>
 </tbody> 
</table> 

<p><%= link_to "スケジュール新規登録",:new_user %></p>

<h1>現在の日時&nbsp:&nbsp<%= Date.today.to_s(:date_jp) %> &nbsp;&nbsp スケジュール合計&nbsp:&nbsp<%= @users.count %></h1>

